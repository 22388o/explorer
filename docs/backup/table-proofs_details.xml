<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">
    <changeSet author="straumat" id="1.0.0-table-proofs_details">

        <createTable tableName="PROOFS_DETAILS"
                     remarks="Proofs details">

            <!-- Proof detail identifier -->
            <column name="ID" type="BIGINT"
                    remarks="Proof detail unique identifier">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_PROOFS_DETAILS"/>
            </column>

            <!-- Table fields -->
            <column name="PROOF_DETAIL_ID" type="VARCHAR(255)"
                    remarks="Proof detail UUID"/>
            <column name="PROOF_INDEX" type="INTEGER"
                    remarks="Proof index"/>
            <column name="TX_MERKLE_PROOF" type="TEXT"
                    remarks="Transaction merkle proof"/>
            <column name="INCLUSION_PROOF" type="TEXT"
                    remarks="Inclusion proof"/>
            <column name="EXCLUSION_PROOF" type="TEXT"
                    remarks="Exclusion proof"/>

            <!-- Technical fields -->
            <column name="CREATED_ON" type="TIMESTAMP WITH TIME ZONE"
                    remarks="Data created on"/>
            <column name="UPDATED_ON" type="TIMESTAMP WITH TIME ZONE"
                    remarks="Data updated on"/>

        </createTable>

    </changeSet>
</databaseChangeLog>