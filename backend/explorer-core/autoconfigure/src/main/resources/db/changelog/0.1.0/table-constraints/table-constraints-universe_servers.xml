<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">
    <changeSet author="straumat" id="0.1.0-table-constraints-universe_servers">

        <!-- Adding a unique constraint on SERVER_ADDRESS -->
        <addUniqueConstraint columnNames="SERVER_ADDRESS"
                             constraintName="UNIVERSE_SERVERS_UNIQUE_SERVER_ADDRESS"
                             tableName="UNIVERSE_SERVERS"/>

        <!-- Foreign key FK_USER_OWNER > USERS.ID -->
        <addForeignKeyConstraint constraintName="FK_UNIVERSE_SERVERS_USER_OWNER"
                                 baseColumnNames="FK_USER_OWNER"
                                 baseTableName="UNIVERSE_SERVERS"
                                 referencedTableName="USERS"
                                 referencedColumnNames="ID"
                                 validate="true"/>

    </changeSet>
</databaseChangeLog>