<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">
    <changeSet author="straumat" id="0.1.0-table-requests_add_proof">

        <createTable tableName="REQUESTS_ADD_PROOF"
                     remarks="A request to add a proof to royllo explorer">

            <!-- Unique identifier -->
            <column name="ID" type="BIGINT"
                    remarks="Unique identifier">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_REQUESTS_ADD_PROOF"/>
            </column>

            <!-- Table fields -->
            <column name="RAW_PROOF" type="TEXT"
                    remarks="Raw proof"/>
            <column name="FK_ASSET" type="BIGINT"
                    remarks="The asset created/updated by this request"/>

            <!-- Technical fields -->
            <column name="CREATED_ON" type="TIMESTAMP"
                    remarks="Data created on"/>
            <column name="UPDATED_ON" type="TIMESTAMP"
                    remarks="Data updated on"/>

        </createTable>

        <!-- Foreign key REQUESTS_ADD_ASSET.ID > REQUESTS.ID -->
        <addForeignKeyConstraint constraintName="FK_REQUESTS_ADD_PROOF_REQUESTS_ID"
                                 baseColumnNames="ID"
                                 baseTableName="REQUESTS_ADD_PROOF"
                                 referencedTableName="REQUESTS"
                                 referencedColumnNames="ID"
                                 validate="true"/>

        <!-- Foreign key FK_ASSET > ASSETS.ID -->
        <addForeignKeyConstraint constraintName="FK_REQUESTS_ADD_PROOF_ASSETS_ID"
                                 baseColumnNames="FK_ASSET"
                                 baseTableName="REQUESTS_ADD_PROOF"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="NO ACTION"
                                 onUpdate="NO ACTION"
                                 referencedTableName="ASSETS"
                                 referencedColumnNames="ID"
                                 validate="true"/>

    </changeSet>
</databaseChangeLog>