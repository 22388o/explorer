<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">
    <changeSet author="straumat" id="0.1.0-data-universe_servers">

        <createTable tableName="UNIVERSE_SERVERS"
                     remarks="Universe servers">

            <!-- Unique identifier -->
            <column name="ID" type="BIGINT"
                    remarks="Unique identifier">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_UNIVERSE_SERVERS"/>
            </column>

            <!-- Table fields -->
            <column name="UNIVERSE_SERVER_ID" type="TEXT"
                    remarks="Universe server UUID"/>
            <column name="FK_USER_OWNER" type="BIGINT"
                    remarks="The user who ows this universe server"/>
            <column name="SERVER_ADDRESS" type="VARCHAR(255)"
                    remarks="The server address typically consists of both an IP address and a port number"/>
            <column name="LAST_SYNCHRONIZED_ON" type="TIMESTAMP"
                    remarks="When is the last time we contact the server to synchronize"/>

            <!-- Technical fields -->
            <column name="CREATED_ON" type="TIMESTAMP"
                    remarks="Data created on"/>
            <column name="UPDATED_ON" type="TIMESTAMP"
                    remarks="Data updated on"/>

        </createTable>

        <!-- Auto increment on the unique identifier -->
        <addAutoIncrement tableName="UNIVERSE_SERVERS"
                          columnName="ID"
                          columnDataType="BIGINT"
                          startWith="1"/>

        <!-- Foreign key FK_USER_OWNER > USERS.ID -->
        <addForeignKeyConstraint constraintName="FK_UNIVERSE_SERVERS_USER_OWNER"
                                 baseColumnNames="FK_USER_OWNER"
                                 baseTableName="UNIVERSE_SERVERS"
                                 referencedTableName="USERS"
                                 referencedColumnNames="ID"
                                 validate="true"/>

        <!-- Adding a unique constraint on SERVER_ADDRESS -->
        <addUniqueConstraint columnNames="SERVER_ADDRESS"
                             constraintName="UNIVERSE_SERVERS_UNIQUE_SERVER_ADDRESS"
                             tableName="UNIVERSE_SERVERS"/>

        <!-- Index on SERVER_ADDRESS -->
        <createIndex indexName="IDX_UNIVERSE_SERVERS_SERVER_ADDRESS"
                     tableName="UNIVERSE_SERVERS">
            <column name="SERVER_ADDRESS"/>
        </createIndex>

    </changeSet>
</databaseChangeLog>