<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">
    <changeSet author="straumat" id="1.0.0-table-proofs_details">

        <createTable tableName="PROOFS_DETAILS"
                     remarks="Proofs details">

            <!-- Proof unique identifier -->
            <column name="FK_PROOF" type="BIGINT"
                    remarks="Proof unique identifier">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_PROOFS_EXCLUSION_PROOFS"/>
            </column>

            <column name="PROOF_INDEX" type="INTEGER"
                    remarks="Proof index"/>
            <column name="TX_MERKLE_PROOF" type="TEXT"
                    remarks="Transaction merkle proof"/>
            <column name="INCLUSION_PROOF" type="TEXT"
                    remarks="Inclusion proof"/>

            <!-- Table fields -->
            <column name="EXCLUSION_PROOF" type="TEXT"
                    remarks="Exclusion proof"/>

        </createTable>

    </changeSet>
</databaseChangeLog>