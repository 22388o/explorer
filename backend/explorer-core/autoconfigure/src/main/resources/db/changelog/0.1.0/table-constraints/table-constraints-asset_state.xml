<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">
    <changeSet author="straumat" id="0.1.0-table-constraints-asset_state">

        <!-- Foreign key FK_ASSET > ASSETS_CHAIN_ANCHORS.ID -->
        <addForeignKeyConstraint constraintName="FK_ASSETS_CHAIN_ANCHORS_ASSET"
                                 baseColumnNames="FK_ASSET"
                                 baseTableName="ASSETS_CHAIN_ANCHORS"
                                 referencedTableName="ASSET"
                                 referencedColumnNames="ID"
                                 validate="true"/>

        <!-- Foreign key FK_PROOF > ASSETS_CHAIN_ANCHORS.ID -->
        <addForeignKeyConstraint constraintName="FK_ASSETS_CHAIN_ANCHORS_PROOF"
                                 baseColumnNames="FK_PROOF"
                                 baseTableName="ASSETS_CHAIN_ANCHORS"
                                 referencedTableName="PROOFS"
                                 referencedColumnNames="ID"
                                 validate="true"/>

    </changeSet>
</databaseChangeLog>